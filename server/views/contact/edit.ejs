<!-- Edit Page -->
<%- include('../partials/header.ejs') %>
<%- include('../partials/main_nav.ejs') %>

<!-- Content for the Edit Page -->
<main>
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6 text-center">
                <h1><%= title %></h1>

                <form class="form" method="POST" action="/contact-list/edit/<%= contact._id %>">
                    <div class="form-group">
                        <label for="nameTextField">Contact Name</label>
                        <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Contact's Name" name="contact_name" value="<%= contact.contact_name %>" required>
                    </div>

                    <div class="form-group">
                        <label for="numberTextField">Contact Number</label>
                        <input type="text" class="form-control" id="numberTextField" placeholder="Enter the Contact's Number" name="contact_number" value="<%= contact.contact_number %>" required>
                    </div>

                    <div class="form-group">
                        <label for="emailTextField">Email Address</label>
                        <input type="text" class="form-control" id="emailTextField" placeholder="Enter the Contact's Email" name="email_address" value="<%= contact.email_address %>" required>
                    </div>

                    <br>
                    
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> Submit
                    </button>
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/bottom_nav.ejs') %>
<%- include('../partials/footer.ejs') %>
